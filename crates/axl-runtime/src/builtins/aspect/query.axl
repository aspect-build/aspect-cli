def _query_impl(ctx):
    stdout = ctx.std.io.stdout
    stderr = ctx.std.io.stderr
    build = ctx.bazel.query().raw(
        ctx.args.pattern[0],
    )
    for result in build.eval():
        print(result.name)


query = task(
    implementation = _query_impl,
    args = {
        "pattern": args.positional(default = ["..."]),
    }
)
