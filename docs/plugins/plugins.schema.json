{
  "$id": "https://docs.aspect.build/plugins.schema.json",
  "title": "Aspect CLI Plugins Catalog",
  "type": "object",
  "properties": {
    "$schema": { "type": "string" },
    "plugins": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "github-repo": {
            "description": "GitHub repository",
            "type": "string"
          }
        },
        "additionalProperties": false,
        "required": ["github-repo"]
      }
    }
  },
  "additionalProperties": false,
  "required": ["plugins"]
}
