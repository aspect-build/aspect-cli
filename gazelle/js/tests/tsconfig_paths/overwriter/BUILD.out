load("@aspect_rules_ts//ts:defs.bzl", "ts_config", "ts_project")

"""
Extend and overwrite some of a parent tsconfig
"""

ts_project(
    name = "overwriter",
    srcs = ["main.ts"],
    tsconfig = ":tsconfig",
    deps = [
        "//lib/a",
        "//lib/c",
    ],
)

ts_config(
    name = "tsconfig",
    src = "tsconfig.json",
    deps = ["//:tsconfig"],
)
