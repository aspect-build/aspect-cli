    name = "python",
    srcs = [
        "unix.go",
        "windows.go",
    ],
    importpath = "aspect.build/cli/gazelle/python",
    visibility = ["//visibility:public"],
    # keep
    deps = [
        "@bazel_gazelle//language:go_default_library",
    ] + select({
        ":windows": [],
        "//conditions:default": [
            "@com_github_bazelbuild_rules_python_gazelle//python",
        ],
    }),
