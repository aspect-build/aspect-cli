load("//gazelle:gazelle.bzl", "gazelle_generation_test")

# General starzelle unit tests. Each test has its own *.star plugins and only the host language.

[
    gazelle_generation_test(
        name = "%s_test" % t,
        dir = t,
        env = {
            "TEST_STARZELLE_PLUGINS": "%s/%s" % (
                package_name(),
                t,
            ),
        },
        gazelle_binary = "//gazelle/host:gazelle_host_binary",
    )
    for t in [t.replace("/WORKSPACE", "") for t in glob(["*/WORKSPACE"])]
]
