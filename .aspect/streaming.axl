def  _impl(ctx):
    cmd = ctx.std.process.command("bash")
    cmd.arg("-c").arg(";".join(['echo "test"; sleep 1' for _ in range(10)]))
    cmd.stdout("piped")
    child = cmd.spawn()

    out = ctx.std.io.stdout;

    stdout = child.stdout()
    for chunk in stdout:
        out.write(chunk)

testing = task(
    implementation = _impl,
    args = {}
)
